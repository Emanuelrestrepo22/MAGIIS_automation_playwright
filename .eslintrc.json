{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"only-warn",
		"prettier",
		"import"
	],
	"rules": {
		"@typescript-eslint/consistent-type-imports": "error",
		"@typescript-eslint/naming-convention": [
			"warn"
		],

		// ðŸ”½ Desactivadas porque requieren type information
		"@typescript-eslint/no-floating-promises": "off",
		"@typescript-eslint/no-misused-promises": "off",
		"@typescript-eslint/no-unnecessary-condition": "off",
		"@typescript-eslint/no-unsafe-argument": "off",
		"@typescript-eslint/no-unsafe-assignment": "off",

		"arrow-spacing": [
			"warn",
			{
				"before": true,
				"after": true
			}
		],
		"brace-style": [
			"warn",
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"curly": [
			"error",
			"multi-line"
		],
		"comma-dangle": [
			"warn",
			"never"
		],
		"eqeqeq": "warn",
		"import/namespace": "off",
		"import/no-duplicates": "off",
		"import/no-unresolved": [
			2,
			{
				"commonjs": true,
				"amd": false,
				"caseSensitive": true
			}
		],
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"off"
		],
		"no-multi-spaces": [
			"warn"
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1,
				"maxEOF": 0
			}
		],
		"object-curly-spacing": [
			"warn",
			"always"
		],
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"warn"
		],
		"space-before-blocks": [
			"warn"
		],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	},
	"overrides": [
		{
			"files": [
				"tests/**/*.ts"
			],
			"env": {
				"browser": true,
				"node": true
			}
		}
	],
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					[
						"@pages",
						"./tests/pages"
					],
					[
						"@helper",
						"./tests/helper"
					],
					[
						"@data",
						"./tests/data"
					],
					[
						"@type",
						"./tests/interfaces"
					],
					[
						"@api",
						"./tests/apis"
					],
					[
						"@TestBase",
						"./tests/pages/TestBase.ts"
					],
					[
						"@playwrightConfig",
						"./playwright.config.ts"
					]
				],
				"extensions": [
					".ts",
					".js",
					".json"
				]
			}
		}
	}
}
